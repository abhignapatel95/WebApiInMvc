@model Mvc.Models.mvcEmployeeModel

@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.EmployeeID)
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Position)
            @Html.EditorFor(m => m.Position)
            @Html.ValidationMessageFor(m => m.Position)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Age)
            @Html.EditorFor(m => m.Age)
            @Html.ValidationMessageFor(m => m.Age)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Salary)
            @Html.EditorFor(m => m.Salary)
            @Html.ValidationMessageFor(m => m.Salary)
        </div>

        <div class="form-group">
            <input type="submit" class="btn button" value="Submit" />
            <input type="reset" class="btn button" value="Reset" />

        </div>

    }


</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval"); 

}

